# SRE Bot Configuration
# Copy this file to .env and fill in your values

# Required: Anthropic API key for Claude
ANTHROPIC_API_KEY=your-anthropic-key

# Slack integration
# Get these from https://api.slack.com/apps
SLACK_BOT_TOKEN=xoxb-your-bot-token
SLACK_APP_TOKEN=xapp-your-app-token

# Slack channel for PagerDuty incident notifications
SLACK_INCIDENT_CHANNEL=#incident-triaging

# Webhook server port (for receiving PagerDuty webhooks)
WEBHOOK_PORT=3000

# PagerDuty Integration
# Get API key from: https://your-subdomain.pagerduty.com/api_keys
PAGERDUTY_API_KEY=your-pagerduty-api-key
PAGERDUTY_SERVICE_ID=your-service-id
PAGERDUTY_FROM_EMAIL=your-email@company.com

# Confluence Integration (Atlassian Cloud)
# Get API token from: https://id.atlassian.com/manage-profile/security/api-tokens
CONFLUENCE_BASE_URL=https://your-domain.atlassian.net/wiki
CONFLUENCE_API_TOKEN=your-atlassian-api-token
CONFLUENCE_USER_EMAIL=your-email@company.com
CONFLUENCE_SPACE_KEY=SRE
CONFLUENCE_PARENT_PAGE_ID=
